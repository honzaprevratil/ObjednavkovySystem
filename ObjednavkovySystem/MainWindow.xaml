<Window x:Class="ObjednavkovySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjednavkovySystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Login" x:Name="TabLogin">
                <Grid>
                    <TextBox x:Name="nickInput" HorizontalAlignment="Left" Height="23" Text="honza" Margin="368,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Nick" HorizontalAlignment="Left" Margin="296,96,0,0" VerticalAlignment="Top"/>
                    <PasswordBox x:Name="passInput" HorizontalAlignment="Left" Password="password" Height="23" Margin="368,131,0,0" VerticalAlignment="Top"  Width="120"/>
                    <Label Content="Password" HorizontalAlignment="Left" Margin="296,127,0,0" VerticalAlignment="Top"/>
                    <Button Content="Log in" Click="Button_LogIn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Margin="296,213,0,0" Height="30"/>

                    <Label x:Name="messageLabel" BorderBrush="Blue" BorderThickness="2" Content="Enter your nick and password." HorizontalAlignment="Left" Margin="296,178,0,0" VerticalAlignment="Top" Width="192"/>
                    <Button x:Name="logOutButton" Content="Log out" Visibility="Visible" Click="Button_LogOut" HorizontalAlignment="Left" VerticalAlignment="Top" Width="177" Margin="609,0,0,0" Height="30"/>
                </Grid>
            </TabItem>
            <TabItem Header="Items" x:Name="TabItems">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="19*"/>
                        <ColumnDefinition Width="767*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Order selected" Click="Button_OrderItem" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="355,36,0,0" Height="30" Grid.Column="1"/>

                    <ListView x:Name="itemsListview" HorizontalAlignment="Left" Height="166" Margin="487,10,0,0" VerticalAlignment="Top" Width="276" Grid.Column="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="100" Header="Item id" DisplayMemberBinding="{Binding id}"  />
                                <GridViewColumn Width="140" Header="Item name" DisplayMemberBinding="{Binding name}"  />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Orders" x:Name="TabOrders">
                <Grid>
                    <Button Content="Hide selected" Click="Button_DeleteOrder" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="374,37,0,0" Height="30"/>

                    <ListView x:Name="ordersListview" HorizontalAlignment="Left" Height="190" Margin="506,10,0,0" VerticalAlignment="Top" Width="276">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="100" Header="Order id" DisplayMemberBinding="{Binding id}"  />
                                <GridViewColumn Width="140" Header="Ordered item" DisplayMemberBinding="{Binding name}"  />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

        <Label Content="Logged User:" HorizontalAlignment="Left" Margin="607,1,0,0" VerticalAlignment="Top" Width="65" FontSize="9" Height="20"/>
        <Label x:Name="loggedUserLabel" Content="" HorizontalAlignment="Left" Margin="672,1,0,0" VerticalAlignment="Top" Width="119" FontSize="9" Height="20"/>
    </Grid>
</Window>
